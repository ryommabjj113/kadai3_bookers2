<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>








<div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>User info</h2>


<%= form_with model: @user do |f| %>
<div>
  <label for="inputName">Name</label>
</div>
<div>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
</div>
<div>
  <label for="inputImage">Image</label>
</div>
<div>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %> 
</div>
<div>
  <label for="inputBody">Introduction</label>
</div>
<div>
  <%= f.text_area :introduction, autofocus: true,  id:"inputIntroduction"%>
</div>
  <%= f.submit "Update User" %>
<% end %>
</div>
</div>